<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:src="@drawable/logo"
        android:contentDescription="App Logo" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtView_appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/app_name"
        android:textAppearance="@style/khana_rasoi_font"/>
    <TextView
        android:id="@+id/txtView_deliver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="17sp"
        android:text="Deliver favourite food"
        android:textAppearance="@style/khana_rasoi_font"
        android:layout_gravity="center_horizontal" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtView_have_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="250dp"
        android:gravity="center"
        android:text="Designed by \nChirag Nikam"
        android:textAppearance="@style/khana_rasoi_font"
        android:textColor="@color/green"
        android:textSize="17sp"/>
</LinearLayout>