<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    tools:context=".Activity4_ChoseLocation">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtView_choseLocation"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="103dp"
        android:text="Choose Your Location"
        android:textAppearance="@style/khana_rasoi_font"
        android:textSize="33sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtView_location"
        android:layout_width="379dp"
        android:layout_height="57dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/input_text"
        android:drawableEnd="@drawable/chose_location"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:paddingEnd="16dp"
        android:text="Jaipur"
        android:textAppearance="@style/lato_text"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtView_choseLocation"
        app:layout_constraintTop_toBottomOf="@+id/txtView_choseLocation" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtView_description"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="236dp"
        android:text="@string/description"
        android:textAppearance="@font/lato_regular"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtView_location" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_go_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:background="@drawable/green_button"
        android:text="Go Next"
        android:textAppearance="@font/yeon_sung_regular"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtView_description" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtView_have_account"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="@string/designed_by_chirag_nikam"
        android:textAppearance="@style/khana_rasoi_font"
        android:textColor="@color/green"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtView_description"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/txtView_description"
        app:layout_constraintTop_toBottomOf="@+id/btn_go_next"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>